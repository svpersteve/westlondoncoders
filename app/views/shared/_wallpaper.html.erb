<%= content_for :additional_stylesheet do %>
  <style>
    <% sources.each do |width, src| %>
      @media all and (min-width: <%= width %>) {
        <%= selector %> {
          background-image: url(<%= src %>);
          background-size: 100%;
          background-repeat: no-repeat;
        }
      }
    <% end %>
  </style>
<% end %>
